<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.eatit.mapper.productionMapper">
  
  <!-- 발주서 목록 조회 -->
  <select id="formorderlist" resultType="purchase_order_productVO">
  SELECT * 
  FROM purchase_order_product
  LIMIT #{startPage},#{pageSize}
  </select>
  
  <!-- 설비 페이징 처리 갯수 -->
  <select id="machinetotalCount" resultType="int">
  		<![CDATA[
	  		SELECT COUNT(*)
	  		FROM machine
	  		WHERE machine_code > 0
  		]]>
  </select>
  
   <!-- 발주서 페이징 처리 갯수 -->
  <select id="formtotalCount" resultType="int">
  		<![CDATA[
	  		SELECT COUNT(*)
	  		FROM purchase_order_product
	  		WHERE order_product_id > 0 and state != '재고 없음'
  		]]>
  </select>
  
  
  </mapper>
  
  